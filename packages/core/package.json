{
  "name": "@pm7/core",
  "version": "0.2.0",
  "description": "Core styles and vanilla JavaScript for PM7 UI components",
  "main": "dist/pm7.js",
  "module": "dist/pm7.esm.js",
  "style": "dist/pm7.css",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "echo 'Core package development mode'",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss src/styles/index.css -o dist/pm7.css",
    "build:js": "rollup -c rollup.config.mjs"
  },
  "keywords": [
    "pm7",
    "ui",
    "components",
    "css",
    "design-system"
  ],
  "author": "Patrick Mast",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^15.1.0",
    "rollup": "^4.9.0",
    "vite": "^5.0.0"
  }
}
