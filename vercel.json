{
  "buildCommand": "npm run build",
  "outputDirectory": "docs",
  "framework": null,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/components/:component",
      "destination": "/components/:component.html"
    },
    {
      "source": "/components/:component/:tab",
      "destination": "/components/:component.html"
    }
  ]
}